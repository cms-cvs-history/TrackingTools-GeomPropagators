# clone the steppinghelix propagators
es_module BeamHaloSHPropagatorAlong = SteppingHelixPropagatorAlong from "TrackPropagation/SteppingHelixPropagator/data/SteppingHelixPropagatorAlong.cfi"
replace BeamHaloSHPropagatorAlong.ComponentName = "BeamHaloSHPropagatorAlong"
es_module BeamHaloSHPropagatorOpposite = SteppingHelixPropagatorOpposite from "TrackPropagation/SteppingHelixPropagator/data/SteppingHelixPropagatorOpposite.cfi"
replace BeamHaloSHPropagatorOpposite.ComponentName = "BeamHaloSHPropagatorOpposite"
es_module BeamHaloSHPropagatorAny = SteppingHelixPropagatorAny from "TrackPropagation/SteppingHelixPropagator/data/SteppingHelixPropagatorAny.cfi"
replace BeamHaloSHPropagatorAny.ComponentName = "BeamHaloSHPropagatorAny"

# clone some material propagators
es_module BeamHaloMPropagatorAlong = MaterialPropagator from "TrackingTools/MaterialEffects/data/MaterialPropagator.cfi"
replace BeamHaloMPropagatorAlong.ComponentName = "BeamHaloMPropagatorAlong"
replace BeamHaloMPropagatorAlong.MaxDPhi = 10000
es_module BeamHaloMPropagatorOpposite = OppositeMaterialPropagator from "TrackingTools/MaterialEffects/data/OppositeMaterialPropagator.cfi"
replace BeamHaloMPropagatorOpposite.ComponentName = "BeamHaloMPropagatorOpposite"
replace BeamHaloMPropagatorOpposite.MaxDPhi = 10000

